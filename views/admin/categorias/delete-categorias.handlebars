
<h3>Excluir a Categoria 
<em><span class="text-secondary">
    {{categoria.nome}}
  </span></em>
</h3>
<div class="card">
  <div class="card-body">
  
	  <form action="/admin/categorias/delete" method="post" >
	    <input type="hidden" name="idCategoria" value="{{categoria._id}}">

		  <div class="form-group">
			  <label for="slug">Slug</label>
  			<input type="text" class="form-control" id="slug" placeholder="Slug da Categoria" value="{{categoria.slug}}" name="slug" readonly>
  	  </div>
  
  	  <div class="form-group">
  	    <label>Postagens</label>
          {{#each postagens}}
            <div class="card mt-3">
              <div class="card-body">
                <h5 class="card-title">{{titulo}}</h5>
                <textarea class="card-text form-control" cols="60" readonly>{{descricao}}</textarea><br>
    
                <p class="card-text">
      <small class="text-muted">
        {{data}}
      </small>
    </p>
    
                <a href="/admin/{{categoria.slug}}/{{slug}}">
        Clique Aqui para ver a publicação
                </a>
    
  </div>
            </div>
          {{else}}
            <div class="card">
              <div class="card-body">
                 <h5 class="card-title ">Sem Postagens</h5>
                 <input type="hidden" name="semPostagem" value="sim">
              </div>
            </div>
          {{/each}}
      </div>
  	  
      <span class="mt-3">Deseja Excluir?</span>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="excluir" id="naoExcluir" value="nao">
        <label class="form-check-label" for="naoExcluir">
          Não  
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="excluir" id="simExcluir" value="sim">
        <label class="form-check-label" for="simExcluir">
          Sim
        </label>
      </div>

  		<div class="form-group mt-3">
  		  <button type="submit" class="btn btn-danger">Excluir</button>
      </div>
	  </form>
  </div>
</div>
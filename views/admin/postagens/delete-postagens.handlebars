
<h3>Excluir a Postagem
<em><span class="text-secondary">
    {{postagem.titulo}}
  </span></em>
</h3>
<div class="card">
  <div class="card-body">
	  <form action="/admin/postagens/delete" method="post" >
	    <input type="hidden" name="id" value="{{postagem._id}}">

		  <div class="form-group">
			  <label for="slug">Slug</label>
  			<input type="text" class="form-control" id="slug" placeholder="Slug da Categoria" value="{{postagem.slug}}" name="slug" readonly>
  			
  			<input type="text" class="form-control mt-2" id="slugCompleto" placeholder="Slug Completo da Categoria" value="{{postagem.slugCompleto}}" name="slugCompleto" readonly>
  	  </div>

		  <div class="form-group">
			  <label for="categoria">Categoria</label>
  			<input type="text" class="form-control" id="categoria" placeholder="Categoria da Postagem" value="{{postagem.categoria}}" name="categoria" readonly>
  	  </div>

		  <div class="form-group">
			  <label for="descricao">Descrição</label>
  			<input type="text" class="form-control" id="descricao" placeholder="Descrição da postagem" value="{{postagem.descricao}}" name="descricao" readonly>
  	  </div>

		  <div class="form-group">
			  <label for="conteudo">Conteudo</label>
  			<input type="text" class="form-control" id="conteudo" placeholder="Conteudo da Postagem" value="{{postagem.conteudo}}" name="conteudo" readonly>
  	  </div>

      <span>Deseja Excluir?</span>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="excluir" id="naoExcluir" value="nao">
        <label class="form-check-label" for="naoExcluir">
          Não  
        </label>
      </div>
        
      <div class="form-check">
        <input class="form-check-input" type="radio" name="excluir" id="simExcluir" value="sim">
        <label class="form-check-label" for="simExcluir">
          Sim
        </label>
      </div>


  		<div class="form-group mt-3">
  		  <button type="submit" class="btn btn-danger">Excluir</button>
      </div>
	  </form>
  </div>
</div>
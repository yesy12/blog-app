  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}

{{/each}}

<h3>Editar Categoria</h3>
<div class="card">
  <div class="card-body">
	  <form action="/admin/categorias/edit" method="post" >
	    <input type="hidden" name="id" value="{{categoria._id}}">
	    <div class="form-group">
    	  <label for="nome">Nome</label>
    		<input type="text" class="form-control" id="nome" placeholder="Nome da Categoria" name="nome" autofocus="autofocus" value="{{categoria.nome}}">
 		  </div>
  
		  <div class="form-group">
			  <label for="slug">Slug</label>
  			<input type="text" class="form-control" id="slug" placeholder="Slug da Categoria" value="{{categoria.slug}}" name="slug">
  	  </div>
  
  		<div class="form-group">
  		  <button type="submit" class="btn btn-warning">Editar</button>
      </div>
	  </form>
  </div>
</div>
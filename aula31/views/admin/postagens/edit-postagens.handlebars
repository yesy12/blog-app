{{#each erros}}
  <div class="alert alert-danger">
    {{texto}}
  </div>
{{else}}

{{/each}}

<h3>Editar Postagem</h3>
<div class="card">
  <div class="card-body">
	  <form action="/admin/postagens/edita" method="post" >
	    <input type="hidden" name="id" value="{{postagem._id}}">
	    
	    <div class="form-group">
    	  <label for="nome">Titulo</label>
    		<input type="text" class="form-control" id="titulo" placeholder="Titulo da Postagem" name="titulo" autofocus="autofocus" value="{{postagem.titulo}}">
 		  </div>
  
      <div class="form-group">
			  <label for="categoriaPostagem">Categoria</label><br>
			  <small class="text-danger"><em>
			    Por erros em nosso sistema,as categorias que estava salva é {{postagem.categoria.nome}}
			  </em></small>
			  
  			<select class="form-control" id="categoriaPostagem" name="categoriaPostagem" onblur="chamarSlug()">
          {{#each categorias}}
          
            <option value="{{_id}}" >
              {{nome}}
            </option>
            
          {{else}}
            <option value="sem-categorias">Sem categorias</option>
          {{/each}}
          
        </select>
  	  </div>
  	  
  	  <div class="form-group">
  	    <label for="slug">Slug</label>
  	    <input type="text" class="form-control" placeholder="Slug da postagem" name="slugPostagem" id="slugPostagem" value="{{postagem.slug}}" onblur="chamarSlug()">
  	    <input type="text" readonly class="form-control mt-2" id="slugPostagemCompleto" name="slugPostagemCompleto" value="{{postagem.slugCompleto}}">
  	  </div>
  	  
      <div class="form-group mt-2">
        <label for="descricaoPostagem">Descrição</label>
        <textarea class="form-control" name="descricaoPostagem" id="descricaoPostagem" rows="3" cols="10">{{postagem.descricao}}</textarea>
      </div><br>
      
      <div class="form-group mt-3">
        <label for="conteudoPostagem">Conteudo</label>
        <textarea class="form-control" name="conteudoPostagem" id="conteudoPostagem" rows="8" cols="20">{{postagem.conteudo}}</textarea>
      </div><br><br>
      
  
  		<div class="form-group">
  		  <button type="submit" class="btn btn-success">Cadastrar</button>
      </div>
	  </form>
  </div>
</div>

<script src="/js/chamar-slug.js"></script>